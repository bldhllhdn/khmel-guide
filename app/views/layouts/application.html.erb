<!DOCTYPE html>
<html>
  <head>
    <title>KhmelGuide</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="site-header sticky-top py-1">
  <div class="container d-flex flex-column flex-md-row justify-content-between">
    <span class="py-2 d-none d-md-inline-block"><strong><%= link_to 'ХмельГайд', root_path %></strong></span>
    <% if logged_out? %>
      <span class="py-2 d-none d-md-inline-block"><%= link_to 'Авторизація', login_path %></span>
      <span class="py-2 d-none d-md-inline-block"><%= link_to 'Реєстрація', new_user_path %></span>
    <% else %>
      <% if is_admin? %>
        <span class="py-2 d-none d-md-inline-block"><%= link_to 'Додати локацію', new_location_path %></span>
      <% end %>
      <span class="py-2 d-none d-md-inline-block"><%= link_to 'Вийти', logout_path %></span>
    <% end %>
  </div>
</nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
