<!DOCTYPE html>
<html>
  <head>
    <title>KhmelGuide</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% if logged_in? %>
      <%= link_to 'Авторизація', login_path %>
      <%= link_to 'Реєстрація', new_user_path %>
    <% else %>
      <% if is_admin? %>
        <%= link_to 'Додати', new_location_path %>  
      <% end %>
      <%= link_to 'Вийти', logout_path %>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
